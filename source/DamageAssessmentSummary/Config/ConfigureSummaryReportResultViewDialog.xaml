        xmlns:d="clr-namespace:ConfigureSummaryReport"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Title="Configure Summary Report"
        xmlns:controls="clr-namespace:ConfigureSummaryReport.Controls">
